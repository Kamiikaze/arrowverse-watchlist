{
  "compilerOptions": {
    "jsx": "react",
    "baseUrl": "./src",
    "declaration": true,
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "data",
    "tests"
  ],
  "typedocOptions": {
    "entryPoints": [
      "./src"
    ],
    "out": "docs",
    "exclude": "node_modules"
  }
}
